{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop"
    ],
    "props":{
      "blockClass": "margf"
    }
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#Products",
      "vtex.menu@2.x:menu#footer-clothing",
      "vtex.menu@2.x:menu#footer-decoration",
      "vtex.menu@2.x:menu#footer-bags",
      "vtex.menu@2.x:menu#footer-envios",
      "vtex.menu@2.x:menu#footer-social"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },
  

  "flex-layout.row#footer-2-desktop": {
    "children": [
      "flex-layout.col#methodpay",
      "flex-layout.col#espacio",
      "flex-layout.col#poweredby"
    ],
    "props": {
      "blockClass": "payment-methods"
    }
  },

  "flex-layout.col#espacio":{
   "children":[
     "rich-text#espacio"
   ]
  },"rich-text#espacio":{
    "props":{
      "text": " "
    }    
  },

  "flex-layout.col#methodpay":{
    "children":[
      "slider-layout#mp"
    ]
  },"slider-layout#mp": {
    "props": {
      "blockClass":"sepsli",
      "itemsPerPage": {
        "desktop": 5,
        "tablet": 5,
        "phone": 5
      },
      "infinite": true,
      "showNavigationArrows": "never",
      "showPaginationDots": "never"
    },
    "children": ["image#mp1", "image#mp2", "image#mp3","image#mp4","image#mp5"]
  },
  
  "image#mp1": {
    "props": {
      "src": "https://zagamx.myvtex.com/arquivos/mastercard-logo.png"
    }
  },
  "image#mp2": {
    "props": {
      "src": "https://zagamx.myvtex.com/arquivos/mercado-pago-logo.png"
    }
  },"image#mp3": {
    "props": {
      "src": "https://zagamx.myvtex.com/arquivos/visa-logo.png"
    }
  },"image#mp4": {
    "props": {
      "src": "https://zagamx.myvtex.com/arquivos/paypal.png"
    }
  },"image#mp5": {
    "props": {
      "src": "https://zagamx.myvtex.com/arquivos/conekta.png"
    }
  },

  "flex-layout.col#poweredby":{
    "children":[
      "slider-layout#pb"
    ]
  },"slider-layout#pb": {
    "props": {
      "blockClass":"sepsli",
      "itemsPerPage": {
        "desktop": 2,
        "tablet": 2,
        "phone": 2
      },
      "infinite": true,
      "showNavigationArrows": "never",
      "showPaginationDots": "never"
    },
    "children": ["image#pb1", "image#pb2"]
  },
  
  "image#pb1": {
    "props": {
      "src": "https://zagamx.myvtex.com/arquivos/pbpc.png",
      "link":{
        "url": "#"
      }    
    }
  },
  "image#pb2": {
    "props": {
      "src": "https://zagamx.myvtex.com/arquivos/pbv.png",
      "link":{
        "url": "#"
      }    
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#social-mobile",
      "flex-layout.row#methodpay-mobile",
      "flex-layout.row#powby-mobile"
    ]
  },
  "flex-layout.row#social-mobile":{
    "children":[
      "rich-text#socialm",
      "slider-layout#social"
    ]
  },"rich-text#socialm":{
    "props":{
      "text":"Conoce Más de ZAGA",
      "blockClass":"titfoo"
    }
  },"flex-layout.row#methodpay-mobile":{
    "children":[
      "rich-text#mpm",
      "slider-layout#mp"
    ],"props":{
      "blockClass":"espfmobile"
    }
  },"rich-text#mpm":{
    "props":{
      "text":"Métodos de Pago",
      "blockClass":"titfoo"
    }
  },
  "flex-layout.row#powby-mobile":{
    "children":[
      "slider-layout#pb"
    ],"props":{
      "blockClass":"espfmobile"
    }
  },

  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  }
}
